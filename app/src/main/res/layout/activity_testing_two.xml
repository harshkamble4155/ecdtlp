<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".fragments.CreateReportFragment">

    <RelativeLayout
        android:id="@+id/relativeLayoutHide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnONOFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="ON/OFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDiscoverable_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="btnEnableDisable_Discoverable"
            android:text="Enable Discoverable"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnFindUnpairedDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:visibility="visible" />

        <ListView
            android:id="@+id/lvNewDevices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnStartConnection"
            android:layout_marginTop="23dp" />

        <Button
            android:id="@+id/btnStartConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFindUnpairedDevices"
            android:layout_marginTop="10dp"
            android:text="Start Connection"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvNewDevices"
                    android:layout_alignParentLeft="true"
                    android:hint="Enter Text Here"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lvNewDevices"
                    android:layout_toRightOf="@+id/editText"
                    android:text="SEND"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/msgReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Message Here"
                android:visibility="visible" />
        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollViewData"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- TS NO -->
            <LinearLayout
                android:id="@+id/tl_show_1"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:background="@drawable/selector_xml_btn_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TS No." />
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/sp_show_ts_no"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- TYPE -->
            <LinearLayout
                android:id="@+id/tl_show_2"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:background="@drawable/selector_xml_btn_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Type" />
                <TextView
                    android:id="@+id/tv_show_type"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </LinearLayout>

            <!-- TS CHAINAGE -->
            <LinearLayout
                android:id="@+id/tl_show_3"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:background="@drawable/selector_xml_btn_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TS Ch/(KM)" />
                <TextView
                    android:id="@+id/tv_show_ts_ch"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="-" />
            </LinearLayout>

            <!-- TS LOCATION -->
            <LinearLayout
                android:id="@+id/tl_show_4"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:background="@drawable/selector_xml_btn_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TS Location" />
                <TextView
                    android:id="@+id/tv_show_location"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/selector_xml_btn_yellow"
                android:padding="5dp">
                <Button
                    android:id="@+id/tlpbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TLP Monitoring" />
                <Button
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/dataloggingbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Data Logging" />
            </LinearLayout>
            <!-- closed until buttons -->

            <LinearLayout
                android:id="@+id/tlpMonitoringPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--start reading part from here -->

                <LinearLayout
                    android:id="@+id/tl_show_5"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_show_d_cp_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carrier Pro Min/On	" />

                    <EditText
                        android:id="@+id/et_show_carrier_pro_min"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:hint="Carrier Pro Min/On	"
                        android:inputType="number|numberDecimal|numberSigned"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/carrierProOnBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_6"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
