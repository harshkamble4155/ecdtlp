                    <ImageButton
                        android:id="@+id/casingProOffBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_9"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_show_d_velve"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Valve" />

                    <EditText
                        android:id="@+id/et_show_value"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Valve"
                        android:inputType="number|numberDecimal|numberSigned"
                        android:textSize="14sp" />

                    <ImageButton
                        android:visibility="invisible"
                        android:id="@+id/valveBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_10"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_show_d_pot_1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Potential 1" />

                    <EditText
                        android:id="@+id/et_show_p1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Potential 1"
                        android:inputType="number|numberDecimal|numberSigned"
                        android:textSize="14sp" />


                    <ImageButton
                        android:visibility="invisible"
                        android:id="@+id/potential1BT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_11"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_show_d_pot_2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Potential 2" />

                    <EditText
                        android:id="@+id/et_show_p2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Potential 2"
                        android:inputType="number|numberDecimal|numberSigned"
                        android:textSize="14sp" />


                    <ImageButton
                        android:visibility="invisible"
                        android:id="@+id/potential2BT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_12"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_show_d_ac_psp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="AC PSP" />

                    <EditText
                        android:id="@+id/et_show_ac_psp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:clickable="false"
                        android:focusable="false"
                        android:cursorVisible="false"
                        android:hint="AC PSP"
                        android:inputType="number|numberDecimal|numberSigned"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/ac_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_13"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_show_d_zinc_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="ZINC Value" />

                    <EditText
                        android:id="@+id/et_show_z_value"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="ZINC Value"
                        android:inputType="number|numberDecimal|numberSigned"
                        android:textSize="14sp" />

                    <ImageButton
                        android:visibility="invisible"
                        android:id="@+id/zincValueBT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_bluetooth_24"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_14"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Date" />

                    <TextView
                        android:id="@+id/tv_show_date"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_15"
                    android:layout_margin="4dp"
                    android:padding="5dp"
