                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_end_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/start_km"
                        android:inputType="textPersonName"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_end_km"
                        style="@style/Base.Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_xml_btn_yellow"
                        android:text="@string/start_km" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_show_save"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_red"
                    android:text="Submit"
                    android:textColor="@color/md_white_1000"
                    android:textSize="18sp" />

                <!--end reading part from here -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dataLoggingpart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <!-- DATA LOGGING STARTS HERE -->

                <LinearLayout
                    android:id="@+id/tl_show_28"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Start Time" />

                    <EditText
                        android:id="@+id/time_view_edit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:textSize="14sp"
                        android:focusable="false"
                        android:hint="Start Time" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_29"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="End Time" />

                    <EditText
                        android:id="@+id/time_view_end"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:textSize="14sp"
                        android:focusable="false"
                        android:hint="End Time" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_29_1"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="On Timer Duration" />

                    <EditText
                        android:id="@+id/onTimer"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:textSize="14sp"
                        android:focusable="false"
                        android:hint="Enter ON Duration" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tl_show_30"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Off Timer Duration" />

                    <EditText
                        android:id="@+id/offTimer"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:textSize="14sp"
                        android:focusable="false"
                        android:hint="Enter OFF Duration" />
                </LinearLayout>

                <Button
                    android:id="@+id/clickHere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/btn_red"
                    android:textColor="@color/md_white_1000"
                    android:text="Create Table" />

                <Button
                    android:id="@+id/dataLoggingBtn"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:background="@drawable/btn_red"
                    android:textColor="@color/md_white_1000"
                    android:text="Start Data Logging" />

                <LinearLayout
                    android:id="@+id/tl_show_33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:visibility="gone"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-3dp"
                        android:hint="Timer :"
                        android:text="00:00" />

                    <TextView
                        android:id="@+id/resend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:hint="Data :"
                        android:text="Resend" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/testingRv"
                        android:visibility="gone"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="-20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <Button
                    android:id="@+id/clickStop"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_margin="4dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_red"
                    android:textColor="@color/md_white_1000"
                    android:text="Click To Stop" />

                <!-- DATA LOGGING ENDS HERE -->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>